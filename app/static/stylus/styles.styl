@import 'fonts'
@import 'icomoon'
//colores
c-rojo = #691214
c-negro = #000000
c-plomo = #2F2F2F
c-plomo-oscuro = #1c2833
c-blanco = #fff
//fuente

lato = 'Lato', sans-serif;
muli = 'Muli', sans-serif;
//clases generales

*
    margin 0
    padding 0

ul li
    list-style-type none
a
    text-decoration none
.cnt-general
    max-width 1024px
    width 98%
    margin auto

h2.section-titulo
    font-size 30px
    font-family lato
    margin 30px 0px

    text-align center
.contenido
  max-width 600px
  margin auto
  text-align center
  font-size 16px
  font-family muli
  margin-bottom 40px
.c-rojo
  color c-rojo
/*++++++++++++++HEADER++++++++++*/
header
    position relative
    background c-blanco
    height 112px
    box-shadow 0px 2px 6px c-plomo
    .cnt-general
        position relative
        height 100%
        .redes
          position absolute
          top 5px
          right 0px
          ul
            display flex
            li
              margin 0px 10px
              a
                font-size 20px
              .faceboox
                color #46629E

              .twitter
                color #55acee
              .youtube
                color #cc181e
        nav
            height 100%
            ul
                align-items center
                height 100%
                justify-content space-between
                display flex
                .cnt-logo
                    width 180px
                li
                    a
                        color c-negro
                        font-family lato
                        font-size 20px
                        &:hover
                            color c-rojo
                            border-bottom 1px solid #691214
        a.logo
            top 3px
            width 120px
            position absolute
            left 0px
            right 0px
            margin auto
            display block
            img
                display block
                width 100%
                height auto
.overlay
  background c-negro
  width 100%
  height 100%
  position fixed
  top 0px
  left 0px
  z-index -1
  opacity 0
  display block
  transition 0.3s ease all
.overlay-block
  opacity 0.7 !important
  z-index 30 !important
.cnt-suscribirse-block
  z-index 40 !important
  opacity 1 !important
.cnt-suscribirse
  transition 0.3s ease all
  max-width 600px
  z-index -1
  opacity 0
  position fixed
  left 0px
  right 0px
  top 20%
  border-radius 5px
  margin auto
  width 96%
  background c-blanco
  padding 20px 10px
  text-align center
  .cnt-general
    position relative
  .cerrar-suscribirse
    position absolute
    top 0px
    right 0px
    z-index 40
    cursor pointer
    font-size 32px
    transition 0.2s ease all
    transform rotate(0) scale(1)
    &:hover
      color c-rojo
      transform rotate(0) scale(1.1)
  .cnt-formulario
    margin-top 20px
  .cnt-input
    input
      width 80% !important
  h2
    color c-negro
    font-family lato
    margin-bottom 20px
  p
    color c-negro
    font-family muli
footer
  .footer-bottom
    padding 5px 0px
    background c-rojo
    .cnt-general
      display flex
      justify-content space-between
      color c-blanco
    .texto-left
      font-size 16px
      font-family lato
    .texto-right
      font-size 16px
      font-family lato
/********paginador******/
section.paginador
  margin-bottom 40px
  ul
    display flex
    justify-content center
    li
      margin 0px 10px
      .flecha-pag
        font-size 26px
        color c-negro
        &:hover
          border-radius 50%
          background c-blanco
          color c-rojo
      a.pag
        padding 4px 9px
        font-size 16px
        font-family muli
        color c-negro
        transition 0.4s ease all
        width 20px
        height 20px
        &:hover
          border-radius 50%
          background c-rojo
          color c-blanco
      .active
        border-radius 50%
        background c-rojo
        color c-blanco !important
/********HOME******/
section.cnt-slider
    .bx-wrapper
        margin-bottom 0px !important
        .bx-pager
            bottom 20px
        .bx-pager-item
            a
                width 20px
                height 20px
                border-radius 50%
                background c-blanco
            a.active
                background c-rojo
    .bx-viewport
        left 0px
        border none
    .sliders
        .slide
            .cnt-general

                position absolute
                left 0px
                right 0px
                z-index 20
                height 100%
                display flex
                align-items center
                .texto
                    font-family lato
                    text-shadow 5px 6px 5px #000
                    width 100%
                    text-align center

                    font-size 26px
                    color white
            .capa-overlay
                position absolute
                top 0px
                left 0px
                background c-negro
                width 100%
                height 100%
                opacity 0.2
                z-index 10
            .imagen
                height 400px
                width 100%
                background-size cover

section.cnt-ultimas-predicas
  margin-bottom 50px
  .ultimas-predicas
    display flex
    justify-content space-between
    .item:hover
      transform rotate(0deg) scale(1.1)
    .item
      box-shadow 0 1px 5px #777
      max-width 280px
      border-bottom 2px solid c-rojo
      transition 0.3s ease all
      a.cnt-img
        img
          display block
      .titulo-predica

        padding 10px 5px
        h3
          text-align center
          font-family lato
          font-size 18px
      .texto
        padding 10px 10px
        text-align justify

        p
          font-size 14px
          font-family muli
          color c-negro
        a
          display block
          margin-top 10px
          font-size 16px
          font-family muli
          color c-rojo
          transition  0.3s ease all
        &:hover a
          color c-rojo
          text-decoration underline

section.cnt-nuestros-eventos
  margin-bottom 30px
  .cnt-fondo-img
    padding 10px 0px 20px 0px
    background-size cover
    position relative
    .cnt-general
      position relative
      z-index 20
    .capa-overlay
      position absolute
      left 0px
      top 0px
      background c-negro
      opacity 0.5
      width 100%
      height 100%
      z-index 10
    h2.section-titulo
      color c-blanco
    .cnt-texto
      display flex
      color white
      justify-content space-between
      .texto-left
        max-width 400px
        font-size 16px
        font-family muli

        text-shadow 5px 6px 5px #000
      .texto-right
        max-width 500px
        .evento:first-child
          a
            margin-top 0px !important
        .evento
          a

            color c-blanco
            display block
            font-size 17px
            margin 10px 0
            font-family lato
            text-shadow 5px 6px 5px #000
            transition 0.3s ease all
            &:hover
              text-decoration underline
          .texto
            color c-blanco
            font-size 15px
            font-family muli
            text-shadow 5px 6px 5px #000



/**********PREDICAS**********/
section.cnt-banner

  .banner
    position relative
    .cnt-general

        position absolute
        left 0px
        right 0px
        z-index 20
        height 100%
        display flex
        align-items center
        .texto
            font-family lato
            text-shadow 5px 6px 5px #000

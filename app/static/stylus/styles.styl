        z-index 10
    .imagen
        height 400px
        width 100%
        background-size cover
section.cnt-predicas
  .ultimas-predicas
    flex-wrap wrap
    .item
      margin-bottom 30px


section.cnt-predica
  margin-bottom 40px
  .cnt-texto
    font-size 16px
    color c-negro
    text-align justify
    font-family muli
    h2
      margin 5px 0px
      color c-negro
      font-size 17px
      font-weight 600
    ul
      margin 10px 0px
      padding-left 20px
      li
        font-size 16px
        list-style-type disc
  .cnt-video
    margin-top 20px
    text-align center
  .cnt-audio
    margin-top 20px
    text-align center
  .cnt-facebook
    margin-top 20px
    text-align center

/*Â¨*******MPA*/
#googleMap
  width 100%
  height 360px
 section.cnt-contacto
   margin-bottom 60px
.cnt-formulario
  form
    max-width 600px
    margin auto
    button
      font-size 18px
      font-family lato
      background c-rojo
      border none
      color c-blanco
      padding 8px 15px
      cursor pointer
      border-radius 4px
    .cnt-input
      width 100%
      margin 10px 0px
      input
        outline-color c-plomo-oscuro
        color c-rojo
        padding-left 5px
        width 100%
        height 28px
        border 2px solid c-rojo
        border-radius 4px
        font-size 16px
        &:focus
          border 1px solid c-rojo
      textarea
        outline-color c-plomo-oscuro
        color c-rojo
        padding-left 5px
        padding-top 5px
        width 100%
        font-size 16px
        font-family muli
        border 2px solid c-rojo
        border-radius 4px

/************EVENTOS***************/
.cnt-eventos
  .eventos
    display flex
    flex-wrap wrap
    .item:hover
      transform rotate(0) scale(1.1)
    .item
      max-width 800px
      box-shadow 0 1px 5px #777
      margin auto
      margin-bottom 40px
      max-width 100%
      transition .3s ease all
      .titulo
        border-bottom 2px solid c-rojo
        padding 5px 10px
        display flex
        justify-content space-between
        h2
          display inline-block
          color c-negro
          font-size 20px
          font-family lato
          max-width 60%
        h3
          display inline-block
          color c-negro
          max-width 30%
          font-size 16px
          font-family lato
      .cnt-texto
        display flex
        .enlace-texto
          padding 10px
          max-width 500px
          margin-right 20px

          .texto
            font-family muli
            font-size 14px
          a
            display block
            margin-top 10px
            color c-rojo
            font-family muli
            transition 0.3s ease all
            &:hover
              text-decoration underline
        figure
          max-width 300px

          img
            display block

